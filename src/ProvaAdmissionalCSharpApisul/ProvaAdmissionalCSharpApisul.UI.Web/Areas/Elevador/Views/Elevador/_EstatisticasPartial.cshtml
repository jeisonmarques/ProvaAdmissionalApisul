@model ProvaAdmissionalCSharpApisul.UI.Web.Application.Elevador.ViewModels.EstatisticaViewModel

<div class="row clearfix">
	<div class="col-md-4">
		<label class="font-bold">Qual é o andar menos utilizado pelos usuários ?</label>
	</div>
	<div class="col-md-6">
		<label>@string.Join(", ", Model.AndarMenosUtilizado)</label>
	</div>
</div>
<div class="space-4"></div>
<div class="row clearfix">
	<div class="col-md-4">
		<label>Qual o período de maior utilização do conjunto de elevadores ?</label>
	</div>
	<div class="col-md-6">
		<label>@Model.PeriodoMaiorUtilizacaoCjElevadores</label>
	</div>
</div>
<div class="space-6"></div>
<div class="row clearfix">
	<div class="col-md-4">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr class="bg-blue-grey text-white">
					<th class="text-center">Qual é o elevador mais frequentado ?</th>
					<th class="text-center">Período que se encontra maior fluxo ?</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.ElevadorMaisFrequentado.Count; i++)
				{
					<tr>
						<td class="align-middle text-center">@Model.ElevadorMaisFrequentado[i]</td>
						<td class="align-middle text-center">@Model.PeriodoMaiorFluxoElevadorMaisUtilizado[i]</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr class="bg-blue-grey text-white">
					<th class="text-center">Qual é o elevador menos frequentado ?</th>
					<th class="text-center">Período que se encontra menor fluxo ?</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.ElevadorMenosUtilizado.Count; i++)
				{
					<tr>
						<td class="align-middle text-center">@Model.ElevadorMenosUtilizado[i]</td>
						<td class="align-middle text-center">@Model.PeriodoMenorFluxoElevadorMenosUtilizado[i]</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr class="align-middle text-center bg-blue-grey text-white">
					<th colspan="2">
						Qual o percentual de uso de cada elevador com relação a todos os serviços prestados ?
					</th>
				</tr>
				<tr class="bg-blue-grey text-white">
					<th class="text-center">Elevador</th>
					<th class="text-center">%</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var pctUsoElevador in Model.PctUsoElevadores)
				{
					<tr>
						<td class="align-middle text-center">@pctUsoElevador.Item1</td>
						<td class="align-middle text-center">@Math.Round(pctUsoElevador.Item2, 2)</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>